<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/film_tasarim_1"
    android:orientation="vertical"
    android:padding="10dp"
    android:textAlignment="center">

    <ImageView
        android:id="@+id/movieImage_user"
        android:layout_width="209dp"
        android:layout_height="206dp"
        android:layout_below="@+id/tV_movieTitle_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/mobilfilm" />

    <TextView
        android:id="@+id/tV_movieTitle_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Za"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tV_moviePoint_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/movieImage_user"
        android:layout_marginStart="145dp"
        android:layout_marginTop="82dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btn_pozitifPuan_user"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView13"
        android:layout_marginEnd="62dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/likerenk" />

    <Button
        android:id="@+id/btn_negatifPuan_user"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13"
        android:layout_marginStart="62dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/eksi_baslangic" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieImage_user"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:text="Toplam Oy:"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tV_toplamPoint_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieImage_user"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView8"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tV_moviePoint_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Oy Kullandınız."
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>