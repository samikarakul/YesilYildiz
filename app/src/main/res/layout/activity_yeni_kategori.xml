<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YeniKategoriActivity"
    android:background="@drawable/arkaplan_tasarim">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="50dp"
        android:text="Yeni Kategori"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:text="Ad:"
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/eT_yeniKategori_kategoriAdi"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_yeniKategori_kaydet"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/eT_yeniKategori_kategoriAdi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/buton_tasarim_1"
        android:text="Kaydet"
        android:shadowColor="@color/black"
        android:shadowDx="15"
        android:shadowDy="20"
        android:shadowRadius="20"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_yeniKategori_mainDon"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/eT_yeniKategori_kategoriAdi"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/btn_yeniKategori_kaydet"
        android:background="@drawable/buton_tasarim_1"
        android:text="Filmlere DÃ¶n"
        android:shadowColor="@color/black"
        android:shadowDx="15"
        android:shadowDy="20"
        android:shadowRadius="20"
        android:textColor="@color/white"/>



</RelativeLayout>